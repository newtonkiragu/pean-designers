{{#if addNewProduct}}
  <h1>New Product</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Name of product</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="description">Product Description</label>
        {{input value=description id="description"}}
      </div>
      <div class="form-group">
        <label for="cost">Price</label>
        {{input value=cost id="cost"}}
      </div>
      <button {{action 'saveProduct1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'productFormShow'}}>New Product</button>
{{/if}}